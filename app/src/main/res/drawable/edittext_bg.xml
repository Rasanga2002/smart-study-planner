<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">
<solid android:color="#FFFFFF"/> <!-- Background color (white in this case) -->

<!-- Border of the EditText -->
<stroke
    android:width="2dp"
    android:color="@color/gray"/> <!-- Border color (green in this case) -->

<!-- Rounded corners -->
<corners android:radius="8dp"/> <!-- Corner radius (rounded edges) -->

<!-- Optional: Shadow effect -->
<padding
    android:left="10dp"
    android:right="10dp"
    android:top="10dp"
    android:bottom="10dp"/> <!-- Padding inside the EditText -->
</shape>
